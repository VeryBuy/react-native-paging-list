{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "stripInternal": true,
    "moduleResolution": "node",
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
